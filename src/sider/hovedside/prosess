import React from 'react';
import PT from 'prop-types';
import classNames from 'classnames';
import { Undertittel, Normaltekst } from 'nav-frontend-typografi';
import { Knapp } from 'nav-frontend-knapper';
import history from '../../history';

const cls = (classes) => classNames('prosess', classes);

function Prosess({ tittel, tekst, knappetekst, prosessUrl, className }) {
    return (
        <article className={cls(className)}>
            <Undertittel>{tittel}</Undertittel>
            <Normaltekst>{tekst}</Normaltekst>
            <Knapp onClick={history.push(prosessUrl)}>{knappetekst}</Knapp>
        </article>
    );
}

Prosess.defaultProps = {
    className: ''
};

Prosess.propTypes = {
    tittel: PT.string.isRequired,
    tekst: PT.string.isRequired,
    knappetekst: PT.string.isRequired,
    prosessUrl: PT.string.isRequired,
    className: PT.string
};

export default Prosess;
